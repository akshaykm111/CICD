pineline {
	agent any
	environment {
        registry = "kubeakshay111"
        registryCredential = 'dockerhub'
    }
	
	stages {
	  stage('Fetch Code') {
	    steps {
	      git branch: 'FlightBook', url: 'https://github.com/akshaykm111/CICD-Docker-K8s.git'
	    }
	  }
	  stage('Build Docker') {
	    steps {
	      script {
	         sh '''
				echo 'Build Docker Image'
				docker build -t kubeakshay/flightbook:${BUILD_NUMBER} .
				
				'''
		  }
		}
	  }
	}
}	